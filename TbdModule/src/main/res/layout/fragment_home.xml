<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2A4D8"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frame1A"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" >

        <ImageButton
            android:id="@+id/room1a"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/room_1a"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
             />

        <TextView
            android:id="@+id/room1AText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomA201"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/room1ATextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/occupied"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2A"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" >

    <ImageButton
        android:id="@+id/room2a"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="false"
        android:contentDescription="@string/room_2a"
        android:background="@color/darkGreen"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/room2AText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomA202"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/room2ATextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vacant"
            android:layout_gravity="center" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frame3A"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475">

        <ImageButton
            android:id="@+id/room3a"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="false"
            android:contentDescription="@string/room_3a"
            android:background="@color/darkGreen"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/room3AText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomA203"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/room3ATextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vacant"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame4A"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475">

        <ImageButton
            android:id="@+id/room4a"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="false"
            android:contentDescription="@string/room_4a"
            android:background="@color/darkGreen"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/room4AText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomA204"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/room4ATextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vacant"
            android:layout_gravity="center" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>